{{user.success_msg}}

<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<img class="logo" src="/img/logo.png">
			<h3 class="text-center">Manage Account</h3>
			<form action="/user/saveEditedUser?_method=PUT" method="post">
            <input type="hidden" name="_method" value="PUT">
				<div class="form-group">
					<label for="name">Name</label>
					<input type="text" class="form-control" name="name" value="{{user.name}}" required>
				</div>
				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" name="email" class="form-control" value="{{user.email}}" disabled>
				</div>
                <div class="form-group" id="currentPass" style="display:block">
					<label for="passwordc">Current Password</label>
					<input id="currentPass"type="password" name="password" class="form-control" value="" required>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			<button id="resetPass" type="button" class="btn btn-warning" onclick="resetpass()">Reset Password</button>
			</form>
		</div>
	</div>
</div>